<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Quản trị</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a id="listuser" class="nav-link active" href="/danh-sach-nguoi-dung">Danh sách người dùng</a>
            </li>
            <li class="nav-item">
              <a id="adduser" class="nav-link" href="/them-nguoi-dung">Thêm người dùng</a>
            </li>
            <li class="nav-item">
              <a id="listcomic" class="nav-link" href="/danh-sach-truyen">Danh sách nhiệm vụ</a>
            </li>
            <li class="nav-item">
              <a id="addcomic" class="nav-link" href="/them-truyen">Thêm nhiệm vụ</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
        <form action="/them-truyen" id="formThemTruyen" method="post" class="m-3" >
          <div class="mb-3">
            <label for="" class="form-label">Tên nhiệm vụ:</label>
            <input type="text"
              class="form-control" name="tenNV" id="tenNV" aria-describedby="helpId" placeholder="Tên truyện" autocomplete="off">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Mức độ</label>
            <input type="text" class="form-control" name="level" id="level" placeholder="Mức độ">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Mô tả</label>
            <input type="text" class="form-control" name="moTa" id="moTa" placeholder="Mô tả">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Ngày xuất bản</label>
            <input type="date" class="form-control" name="ngayXuatBan" id="ngayXuatBan" placeholder="Ngày xuất bản">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">point</label>
            <input type="number" class="form-control" name="point" id="point" placeholder="point">
          </div>
          <% if(typeof msg === "string" && !(msg.trim().length === 0)){%>
          <span class="text-danger"><%= msg %></span>
          <%}%>
          <button type="submit" class="btn btn-primary w-100">Thêm truyện</button>
        </form>
      </div>    
    </div>
  </div>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>

  <script type='text/javascript'>
      let myidtoinsert = window.location.toString();
      if(myidtoinsert.indexOf('?') != -1){
        myidtoinsert = myidtoinsert.substring(myidtoinsert.lastIndexOf('/')+1, myidtoinsert.indexOf('?'));
      } else {
        myidtoinsert = myidtoinsert.substring(myidtoinsert.lastIndexOf('/')+1);
      }
      document.getElementById("listuser").href += "/" + myidtoinsert;
      document.getElementById("adduser").href += "/" + myidtoinsert;
      document.getElementById("listcomic").href += "/" + myidtoinsert;
      document.getElementById("addcomic").href += "/" + myidtoinsert;
      document.getElementById("formThemTruyen").action += "/" + myidtoinsert;
  </script>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>